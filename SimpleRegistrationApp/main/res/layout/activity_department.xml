<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Department">

    <RadioGroup
        android:id="@+id/rgDept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbCS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbCS"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rgSis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbSis"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rgBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbBio"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rgDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbDS"
            android:textColor="@color/black"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnDeptSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btnDeptSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/gray"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnDeptCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btnDeptCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/gray"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>